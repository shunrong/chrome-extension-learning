{
  "manifest_version": 3,
  "name": "侧边栏扩展示例",
  "version": "1.0.0",
  "description": "一个功能丰富的侧边栏扩展，包含仪表板、工具和设置功能",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "打开侧边栏",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "bookmarks",
    "scripting",
    "notifications",
    "alarms"
  ],

  "optional_permissions": ["history", "downloads"],

  "host_permissions": ["https://*/*", "http://*/*"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
